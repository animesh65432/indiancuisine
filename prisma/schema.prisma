generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum CuisineType {
  Indian
  South_Indian
  Goan
  North_Indian
  Assamese
  Tamil_Nadu
  Karnataka
  Malvani
  Kerala
  Gujarati
  Sindhi
  Konkan
  Hyderabadi
  Andhra
  Coorg
  Bengali
  Mangalorean
  Kongunadu
  Punjabi
  Udupi
  Chettinad
  Indo_Chinese
  Parsi
  Rajasthani
  Kashmiri
  Mughlai
  Bihari
  Maharashtrian
  North_East_India
  Himachal
  Uttar_Pradesh
  Awadhi
  Oriya
  Uttarakhand
  Lucknowi
  Haryana
  Malabar
  Jharkhand
  Nagaland
}

enum LanguageTypes {
  hi
  bn
  ta
  te
  mr
  gu
  kn
  ml
  pa
  or
  ur
  as
  sa
  mai
  sat
  ne
  doi
  brx
  mni
}


enum DietType {
  Vegetarian
  Non_Vegetarian 
  Diabetic_Friendly
  High_Protein_Non_Vegetarian
  High_Protein_Vegetarian
  Eggetarian
  Gluten_Free
}
model Dish {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String     
  image_url   String
  cuisine     CuisineType
  description String
  diet        DietType
  prep_time   String
  Languages   LanguagesDish[]
  @@index([diet, cuisine, name])    
  @@index([cuisine, name])          
  @@index([name])                  
}

model LanguagesDish {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String    
  cuisine     String
  description String
  prep_time   String
  language    LanguageTypes
  dishId      String   @db.ObjectId
  Dish        Dish     @relation(fields: [dishId], references: [id])
  @@index([language, name])        
  @@index([language, cuisine])      
  @@index([language, dishId])            
}